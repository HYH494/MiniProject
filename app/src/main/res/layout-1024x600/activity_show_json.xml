<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="60dp"
        android:text="Question:"
        android:textColor="#000000"
        android:textSize="28sp"
        />

    <TextView
        android:id="@+id/txt_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_text"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:textColor="#000000"
        android:textSize="28sp"
        />

    <RadioGroup
        android:id="@+id/json_rgp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
        android:layout_below="@+id/txt_questions">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:checked="true"
            android:id="@+id/choose_1"
            android:textSize="28sp"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/choose_2"
            android:textSize="28sp"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/choose_3"
            android:textSize="28sp"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/choose_4"
            android:textSize="28sp"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/choose_5"
            android:textSize="28sp"
            />
    </RadioGroup>

    <Button
        android:id="@+id/bt_choose"
        android:layout_width="500dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="Start"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_bgchange"
        android:onClick="confirm"
        />

</RelativeLayout>